@model InventoryMannagementSystem.Models.Category

@{
    ViewData["Title"] = "Category Details";
}

<h1 class="page-title">Category Details</h1>

<div class="details-container">
    <div class="details-item">
        <h4>Category ID:</h4>
        <span>@Model.CategoryId</span>
    </div>

    <div class="details-item">
        <h4>Category Name:</h4>
        <span>@Model.CategoryName</span>
    </div>
</div>

<div class="button-group">
    <a href="@Url.Action("Update", new { id = Model.CategoryId })" class="btn btn-edit">Edit</a>
    <a href="@Url.Action("Index")" class="btn btn-back">Back to List</a>
</div>

<style>
    .page-title {
        color: #333;
        text-align: center;
        font-size: 28px;
        font-weight: bold;
        margin-bottom: 20px;
    }

    /* Details Container */
    .details-container {
        background: white;
        padding: 25px;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        max-width: 500px;
        margin: auto;
    }

    .details-item {
        display: flex;
        justify-content: space-between;
        border-bottom: 1px solid #ddd;
        padding: 12px 0;
    }

        .details-item h4 {
            font-size: 18px;
            color: #555;
            margin: 0;
        }

        .details-item span {
            font-size: 18px;
            font-weight: bold;
            color: #222;
        }

    /* Button Styling */
    .button-group {
        text-align: center;
        margin-top: 20px;
    }

    .btn {
        display: inline-block;
        padding: 12px 20px;
        border-radius: 6px;
        text-decoration: none;
        font-weight: bold;
        font-size: 16px;
        text-align: center;
        border: none;
        cursor: pointer;
        transition: 0.3s ease-in-out;
        margin: 0 8px;
    }

        .btn:hover {
            opacity: 0.85;
        }

    .btn-edit {
        background-color: #007bff;
        color: white;
    }

    .btn-back {
        background-color: #6c757d;
        color: white;
    }
</style>
