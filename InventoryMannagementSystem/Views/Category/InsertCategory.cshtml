@model InventoryMannagementSystem.Models.Category

@{
    ViewData["Title"] = "Insert Category";
}

<h1>Insert Category</h1>

<hr />

<form asp-action="InsertCategory" method="post" class="category-form">
    <div class="form-group">
        <label for="CategoryName" class="form-label">Category Name  <span class="text-danger asterisk ">*</span></label>
        <input type="text" id="CategoryName" name="CategoryName" class="form-control" />
        <span  class="text-danger">@Html.ValidationMessage("CategoryName")</span>
    </div>

    <button type="submit" class="btn btn-create">Create</button>
</form>

<div class="back-container">
    <a asp-action="Index" class="btn btn-back">Back to List</a>
</div>

<style>
    h1 {
        color: #333;
    }

    .category-form {
        background: #f9f9f9;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        max-width: 400px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-label {
        font-weight: bold;
    }

    .form-control {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 16px;
    }

    .btn {
        display: inline-block;
        padding: 10px 15px;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
        text-align: center;
        border: none;
        cursor: pointer;
        transition: 0.3s;
    }

        .btn:hover {
            color:black;
        }

    .btn-create {
        background-color: #28a745;
        color: white;
    }

    .btn-back {
        background-color: #007bff;
        color: white;
        display: inline-block;
        margin-top: 10px;
    }

    .alert {
        margin-top: 15px;
        padding: 10px;
        border-radius: 5px;
    }

    .alert-info {
        background-color: #d1ecf1;
        color: #0c5460;
        border: 1px solid #bee5eb;
    }

    .asterisk {
        display: inline;
        font-size: 18px;
        font-weight: bold;
    }
</style>
