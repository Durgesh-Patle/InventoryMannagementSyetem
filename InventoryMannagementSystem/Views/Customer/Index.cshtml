@model IEnumerable<InventoryMannagementSystem.Models.Customer>

@{
    ViewData["Title"] = "Index";
    int i= 1; 
}

<h1>All Customers</h1>

<p>
    <a asp-action="InsertCustomer" class="btn-create">Create New Customer</a>
</p>

<div id="container">
    <table class="styled-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Address</th>
                <th>CategoryName</th>
                <th>ProductName</th>
                <th>ProductPrice</th>
                <th>Quantity</th>
                <th>TotalBillingAmount</th>
                <th>DateOfPurchase</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@(i++)</td>
                    <td>@item.CustomerName</td>
                    <td>@item.CustomerEmail</td>
                    <td>@item.CustomerAddress</td>
                    <td>@item.Categories.CategoryName</td>
                    <td>@item.Products.ProductName</td>
                    <td>@item.Products.ProductPrice</td>
                    <td>@item.Quantity</td>
                    <td>@item.TotalBillingAmount.ToString()</td>
                    <td>@(item.DateOfPurchase.ToString("yyyy-MM-dd HH:mm"))</td>
                    <td class="action-buttons">
                        <a asp-action="UpdateCustomer" asp-route-id="@item.CustomerId" class="btn btn-edit">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.CustomerId" class="btn btn-details">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.CustomerId" onclick="return confirmDelete()" class="btn btn-delete">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    function confirmDelete() {
        return confirm("Are you sure you want to delete this customer?");
    }
</script>


<style>
    #container{
        width:100%;
    }

    h1{
        text-align:center;
        font-family:'Times New Roman', Times, serif;
    }

    .title {
        color: #343a40;
        font-size: 12px;
        font-weight: bold;
        margin-bottom: 20px;
        padding: 10px;
        text-align: center;
    }

    .btn-create {
        padding: 10px 18px;
        background-color: #007bff;
        color: white;
        text-decoration: none;
        font-weight: bold;
        border-radius: 6px;
        margin-bottom: 15px;
        /* transition: background 0.3s ease-in-out; */
    }

    .table-container {
        width: 100%;
        margin: auto;
    }

    .styled-table {
        width: 100%;
        border-collapse: collapse;
        background-color: white;
        /* table-layout: fixed;  */
    }

    thead {
        position: sticky;
        top: 0;
        background-color: #007bff;
        color: white;
    }

    th, td {
        padding: 8px;
        text-align: left;
        font-size: 14px;
        /* white-space: nowrap; */
        /* overflow: hidden; */
        text-overflow: ellipsis;
        text-align:center;
    }

    th {
        background-color: #4CAF50;
        color: white;
        font-size: 16px;
    }

    td {
        border-bottom: 1px solid #ddd;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    tr:hover {
        background-color: #e9ecef;
    }

    .action-buttons {
        display: flex;
        flex-direction:column;
