@model InventoryMannagementSystem.Models.AuthModel

@{
	ViewData["Title"] = "User Login";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container d-flex justify-content-center align-items-center">
	<div class="card p-4 shadow-lg border-0" style="max-width: 450px; width: 100%;">
		<h2 class="text-center text-primary mb-3">Login Page</h2>

		<form asp-action="userLogin" asp-controller="Auth">
			<div class="mb-3">
				<label asp-for="Name" class="form-label fw-bold">Name</label>
				<input asp-for="Name" class="form-control  p-2" placeholder="Enter your name" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>

			<div class="mb-3">
				<label asp-for="Email" class="form-label fw-bold">Email</label>
				<input asp-for="Email" class="form-control p-2" placeholder="Enter your email" />
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>

			<div class="mb-3">
				<label asp-for="Password" class="form-label fw-bold">Password</label>
				<input asp-for="Password" type="password" class="form-control p-2" placeholder="Enter your password" />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>

			<div class="d-grid">
				<button type="submit" class="btn btn-primary p-2 fw-bold">Login</button>
			</div>
		</form>

		<div class="text-center mt-3">
			<p>Don't have an account? <a asp-action="UserRegister" asp-controller="Auth" class="text-decoration-none text-primary fw-bold">Register here</a></p>
		</div>

		<div class="text-center mt-3">
			<a asp-action="Index" asp-controller="Home" class="text-decoration-none text-primary">← Back to Home</a>
		</div>
	</div>
</div>
