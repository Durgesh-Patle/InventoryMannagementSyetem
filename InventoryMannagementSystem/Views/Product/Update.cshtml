<h2>Update Product</h2>

<form asp-action="Update" class="form" method="post">
	<input type="hidden" asp-for="ProductModel.ProductId" />

	<div class="form-group">
		<label asp-for="ProductModel.ProductName">Product Name</label>
		<input asp-for="ProductModel.ProductName" class="form-control" required />
		<span asp-validation-for="ProductModel.ProductName" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="ProductModel.ProductBrand">Product Brand</label>
		<input asp-for="ProductModel.ProductBrand" class="form-control" required />
		<span asp-validation-for="ProductModel.ProductBrand" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="ProductModel.StockQuantity">Stock Quantity</label>
		<input asp-for="ProductModel.StockQuantity" type="text" class="form-control" required />
		<span asp-validation-for="ProductModel.StockQuantity" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="ProductModel.ProductPrice">Product Price</label>
		<input asp-for="ProductModel.ProductPrice" type="text" class="form-control" required />
		<span asp-validation-for="ProductModel.ProductPrice" class="text-danger"></span>
	</div>


