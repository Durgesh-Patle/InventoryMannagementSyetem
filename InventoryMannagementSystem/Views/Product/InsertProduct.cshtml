@using InventoryMannagementSystem.Models
@model ProductViewModel
@{
	ViewData["Title"] = "Insert Product";
}

	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
	<style>
		body {
			background-color: #f8f9fa;
		}

		.form-container {
			max-width: 500px;
			margin: auto;
			background: white;
			padding: 20px;
			border-radius: 8px;
			box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
		}

		.asterisk {
			display: inline;
			font-size: 18px;
			font-weight: bold;
		}
	</style>
	<div class="container mt-5">
		<h1 class="text-center text-primary">Create New Product</h1>
		<hr />

		<div class="form-container">
			<form method="post" asp-action="InsertProduct">

				<input type="hidden" name="ProductId" value="@Model.ProductModel.ProductId" />

				<div class="mb-3">
					<label for="ProductName" class="form-label">Product Name  <span class="text-danger asterisk ">*</span></label>
					<input type="text" id="ProductName" name="ProductModel.ProductName" class="form-control" />
					<span class="text-danger">@Html.ValidationMessage("ProductModel.ProductName")</span>
				</div>

				<div class="mb-3">
					<label for="ProductBrand" class="form-label">Product Brand  <span class="text-danger asterisk ">*</span></label>
					<input type="text" id="ProductBrand" name="ProductModel.ProductBrand" class="form-control" />
					<span class="text-danger">@Html.ValidationMessage("ProductModel.ProductBrand")</span>
				</div>

				<div class="mb-3">
					<label for="StockQuantity" class="form-label">Stock Quantity  <span class="text-danger asterisk ">*</span></label>
					<input type="text" id="StockQuantity" name="ProductModel.StockQuantity" class="form-control" />
					<span class="text-danger">@Html.ValidationMessage("ProductModel.StockQuantity")</span>
				</div>

				<div class="mb-3">
					<label for="ProductPrice" class="form-label">Product Price  <span class="text-danger asterisk ">*</span></label>
					<input type="text" id="ProductPrice" name="ProductModel.ProductPrice" class="form-control" />
					<span class="text-danger">@Html.ValidationMessage("ProductModel.ProductPrice")</span>
				</div>

				<div class="mb-3">
					<label>Category  <span class="text-danger asterisk ">*</span></label>

					@Html.DropDownList("CategoryId",
											new SelectList(Model.CategoryModel, "CategoryId", "CategoryName"),
											"----Select Category----", new { @class = "form-control" })
				</div>

				<div class="d-grid gap-2">
					<button type="submit" class="btn btn-primary">Create</button>
				</div>
			</form>

			<div class="mt-3 text-center">
				<a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
			</div>
		</div>
	</div>
